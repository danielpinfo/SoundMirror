{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SoundMirror",
  "identifier": "com.soundmirror.app",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SoundMirror - Articulation Visualization",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/**/*"
    ],
    "category": "Education",
    "shortDescription": "Articulation visualization for pronunciation learning",
    "longDescription": "SoundMirror is an offline-first articulation visualization system for deaf, mute, and language learners. It uses native OS text-to-speech to drive a deterministic sprite-based phoneme articulation engine.",
    "copyright": "Â© 2026 SoundMirror",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": ""
    }
  }
}
